<!doctype html>

<html {{ site.language_attributes }} class="">

	<head>

		<meta charset="{{ site.charset }}" />

		<meta name="viewport" content="width=device-width, initial-scale=1" />

		{{function('wp_head')}}

	</head>

	<body class="{{ body_class }}" data-template="base.twig">

		{# Alerts only need to display on the home page #}

		{% if fn( 'is_front_page' ) %}

			{% include 'partials/alert.twig' %}

		{% endif %}

		<header role="banner" class="header">

			{% block header %}

				<div class="header__wrap">

					{% include 'partials/logo.twig' %}

					{% include 'partials/nhs.twig' %}

					{% include 'partials/tools.twig' %}

					{% include 'partials/navigation.twig' %}

				</div>

			{% endblock %}

		</header>

		<main role="main" class="main">

			<div class="main__wrap">

				{% block content %}

					Sorry, no content

				{% endblock %}
		
			</div>

		</main>

		{% block footer %}

			<footer role="contentinfo" class="footer">

				<div class="footer__wrap">

					{% include 'partials/tools.twig' %}

					<div class="services-provided-by">

						<p>Barnet, Enfield and Haringey Mental Health NHS Trust provide IAPT services for Barnet and Enfield. Haringey IAPT is provided by Whittington Health NHS Trust.</p>

					</div>

					{% include 'partials/logo.twig' %}

					{% include 'partials/nhs.twig' %}

					<nav role="navigation" class="secondary-navigation">

						<ol class="secondary-navigation__list">

							{% for item in footer_menu.items %}

								<li class="secondary-navigation__item {% if item.current %}secondary-navigation__item--is-current{% endif %}">

									<a href="{{ item.link }}" class="secondary-navigation__link">{{ item.title }}</a>

								</li>

							{% endfor %}

						</ol>

					</nav>

					<p class="copyright">&copy; {{ site.name }} {{ "now" | date( 'Y' ) }}</p>

				</div>

			</footer>

		{% endblock %}

		{% include 'partials/consent.twig' %}

		{{ function('wp_footer') }}

	</body>

</html>
