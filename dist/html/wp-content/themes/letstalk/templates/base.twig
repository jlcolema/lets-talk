<!doctype html>

<html {{ site.language_attributes }} class="">

	<head>

		<meta charset="{{ site.charset }}" />

		<meta name="viewport" content="width=device-width, initial-scale=1" />

		{{function('wp_head')}}

	</head>

	<body class="{{body_class}}" data-template="base.twig">

		{% include 'partials/alert.twig' %}

		<header role="banner" class="header">

			{% block header %}

				<div class="header__wrap">

					{% include 'partials/logo.twig' %}

					{% include 'partials/nhs.twig' %}

					{% include 'partials/tools.twig' %}

					{% include 'partials/navigation.twig' %}

				</div>

			{% endblock %}

		</header>

		<main role="main" class="main">

			<div class="main__wrap">

				{% block content %}

					Sorry, no content

				{% endblock %}
		
			</div>

		</main>

		{% block footer %}

			<footer role="contentinfo" class="footer">

				<div class="footer__wrap">

					{% include 'partials/tools.twig' %}

					<div class="services-provided-by">

						<p>Barnet, Enfield and Haringey Mental Health NHS Trust provide IAPT services for Barnet and Enfield. Haringey IAPT is provided by Whittington Health NHS Trust.</p>

					</div>

					{% include 'partials/logo.twig' %}

					{% include 'partials/nhs.twig' %}

					<nav role="navigation" class="secondary-navigation">

						<ol class="secondary-navigation__list">

							<li class="secondary-navigation__item secondary-navigation__item--is-current">

								<a href="/cookie-policy/" class="secondary-navigation__link">Cookie Policy</a>

							</li>

							<li class="secondary-navigation__item">

								<a href="/accessibility/" class="secondary-navigation__link">Accessibility</a>

							</li>

							<li class="secondary-navigation__item">

								<a href="/privacy-policy/" class="secondary-navigation__link">Privacy Policy</a>

							</li>

						</ol>

					</nav>

					<p class="copyright">&copy; {{ site.name }} {{ "now" | date( 'Y' ) }}</p>

					<div class="">Enfield, Barnet &amp; Haringey</div>

				</div>

			</footer>

		{% endblock %}

		{% include 'partials/consent.twig' %}

		{{ function('wp_footer') }}

	</body>

</html>
