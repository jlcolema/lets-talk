		<details class="accordion__item">

			<summary class="accordion__summary">Local Support</summary>

			<div class="accordion__details">

				<div class="resources">

					<ul class="resources__list">

						{% for local_resource in location.meta( 'location_resources_local_support' ) %}

							<li class="resources__item">
							
								<h3 class="resources__name">{{ local_resource.local_support_name }}</h3>

								<div class="resources__url">

									<a href="{{ local_resource.local_support_url }}" class="resources__link">{{ local_resource.local_support_url }}</a>

								</div>

								<div class="resources__description">

