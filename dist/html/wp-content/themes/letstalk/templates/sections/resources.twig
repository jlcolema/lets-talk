		<details class="accordion__item">

			<summary class="accordion__summary">National Support</summary>

			<div class="accordion__details">

				<div class="resources">

					<ul class="resources__list">

						{% for resource in resources %}

							<li class="resources__item">

								<h3 class="resources__name">{{ resource.title }}</h3>

								<div class="resources__url">

									<a href="{{ resource.resource_url }}" class="resources__link">{{ resource.resource_url }}</a>

								</div>

								<div class="resources__description">

									{{ resource.resource_description }}

								</div>

							</li>

						{% endfor %}

					</ul>

				</div>

			</div>

