<section id="groups-and-workshops" class="location__section location__section--groups-and-workshops">

	<div class="intro">

		<div class="intro__hero">

			<div class="hero">

				{% set location_groups_hero = Image(location.location_groups_hero) %}

				<img src="{{ location_groups_hero.src }}" srcset="" sizes="" width="" height="" decoding="async" alt="{{ location_groups_hero.alt }}" class="hero__img" />

			</div>

		</div>

		<div class="intro__text">

			<h2 class="section__header section__header--is-overlay">Groups and Workshops</h2>

			<div class="overview section__overview content">

				{{ location.location_groups_content | wpautop }}

			</div>

		</div>

	</div>

	<div class="accordion__list">

		{% for item in location.meta('location_groups_list') %}

			<details class="accordion__item">

				<summary class="accordion__summary">{{ item.location_group_title }}</summary>

				<div class="accordion__details">

					{{ item.location_group_content }}

				</div>

			</details>

		{% endfor %}

	</div>

	{% include 'components/testimonial.twig' %}	

</section>