<section id="problems-we-help-with" class="location__section location__section--problems-we-help-with">

	<h2 class="section__header section__header--is-overlay">Problems We Help With</h2>

	<div class="intro">

		<div class="intro__hero">

			<div class="hero">

				{% set location_problems_hero = Image(location.location_problems_hero) %}

				<img src="{{ location_problems_hero.src }}" srcset="" sizes="" width="" height="" decoding="async" alt="{{ location_problems_hero.alt }}" class="hero__img" />

				<div class="hero__overlay hero__overlay--default">

					<div class="hero__inner-overlay">

						<h2>Problems We Help With</h2>

					</div>

				</div>

			</div>

		</div>

		<div class="intro__text">

			<div class="overview section__overview">

				{{ location.location_problems_overview | wpautop }}

			</div>

		</div>

	</div>

	<div class="accordion__list">

		{% for problem in problems %}

			<details class="accordion__item">

				<summary class="accordion__summary">{{ problem.title }}</summary>

				<div class="accordion__details">

					{# Description #}

					<div class="">

						{{ problem.problem_description | wpautop }}

					</div>

					{# Common Symptoms #}

					{% set common_symptoms = problem.meta( 'common_symptoms' ) %}

					<div class="">

						<h3 class="subheader">Common Symptoms</h3>

						{# Details #}

						<div class="">

							{{ common_symptoms.common_symptoms_details | wpautop }}

						</div>

						{# List #}

						<div class="">

							<ul class="">

								{% for symptom in common_symptoms.common_symptoms_list %}

									<li class="">{{ symptom.symptom_name }}</li>

								{% endfor %}

							</ul>

						</div>

						{# Additional Details #}

						{% if common_symptoms.common_symptoms_additional_details %}

							<div class="">

								{{ common_symptoms.common_symptoms_additional_details | wpautop }}

							</div>

						{% endif %}

					</div>

					{# Treatments We Offer #}

					{% set treatments_we_offer = problem.meta( 'treatments_we_offer' ) %}

					<div class="">

						{% if treatments_we_offer.treatments_we_offer_header %}

							<h3 class="subheader">{{ treatments_we_offer.treatments_we_offer_header }}</h3>
						
						{% else %}

							<h3 class="subheader">Treatments We Offer</h3>

						{% endif %}

						{# Details #}

						<div class="">

							{{ treatments_we_offer.treatments_we_offer_details | wpautop }}

						</div>

						{# List #}

						<div class="">

							<ul class="">

								{% for treatment in treatments_we_offer.treatments_we_offer_list %}

									<li class="">{{ treatment.treatment_name }}</li>

								{% endfor %}

							</ul>

						</div>

					</div>

					{# Further Information #}

					<div class="">

						<h3 class="subheader">Further Information</h3>

						<div class="">

							<ul class="">

								{% for further_information in problem.meta( 'problem_further_information' ) %}

									<li class="">

										<a href="{{ further_information.further_information_url }}" class="">{{ further_information.further_information_url }}</a>

									</li>

								{% endfor %}

							</ul>

						</div>

					</div>

				</div>

			</details>

		{% endfor %}

	</div>

	{# Testimonial #}

	<div class="testimonial">

