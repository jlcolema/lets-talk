<section id="faqs" class="location__section">

	{% include 'partials/hero.twig' %}

	<h2 class="section__header">Frequently Asked Questions</h2>

	<div class="accordion__list faqs__list">

		{% for faq in faqs %}

			<details class="accordion__item faqs__item">

				<summary class="accordion__summary faqs__question">{{ faq.title }}</summary>

				<div class="accordion__details faqs__answer">

					{{ faq.faq_answer }}

				</div>

			</details>

		{% endfor %}

	</div>

</section>