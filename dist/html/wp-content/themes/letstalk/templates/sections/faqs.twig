<section id="faqs" class="location__section location__section--faqs">

	<div class="intro">

		<div class="intro__hero">

			<div class="hero">

				{% set location_faqs_hero = Image(location.location_faqs_hero) %}

				<img src="{{ location_faqs_hero.src }}" srcset="" sizes="" width="" height="" decoding="async" alt="{{ location_faqs_hero.alt }}" class="hero__img" />

			</div>

		</div>

		<div class="intro__text">

			<h2 class="section__header section__header--is-overlay">Frequently Asked Questions</h2>

			<div class="overview section__overview">

				{{ location.location_faqs_overview | wpautop }}

			</div>

		</div>

	</div>

	<div class="accordion__list faqs__list">

		{% for faq in faqs %}

			<details class="accordion__item faqs__item">

				<summary class="accordion__summary faqs__question">{{ faq.title }}</summary>

				<div class="accordion__details faqs__answer">

					{{ faq.faq_answer | wpautop }}

				</div>

			</details>

		{% endfor %}

	</div>

	{# Testimonial #}

	<div class="testimonial">

