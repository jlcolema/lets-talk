<section id="how-we-can-help-you" class="location__section">

	<div class="hero">

		{% set location_services_hero = Image(location.location_services_hero) %}

		<img src="{{ location_services_hero.src }}" srcset="" sizes="" width="" height="" decoding="async" alt="{{ location_services_hero.alt }}" class="hero__img" />

	</div>

	<h2 class="section__header">How We Can Help You</h2>

	<div class="section__overview">

		{{ location.location_services_overview }}

	</div>

	<div class="accordion__list">

		{% for service in location.meta( 'location_services_list' ) %}

			<details class="accordion__item">

				<summary class="accordion__summary">{{ service.location_service_name }}</summary>

				<div class="accordion__details">

					{# Description #}

					<div class="">

						{{ service.location_service_description }}

					</div>

					{# List #}

					<div class="">

						<ul class="">

							{% for service_option in service.location_service_options %}
						
								<li class="">{{ service_option.location_service_option_item }}</li>

							{% endfor %}

						</ul>

					</div>

					{# Notes #}

					<div class="">

						{{ service.location_service_notes }}

					</div>

				</div>

			</details>

		{% endfor %}

	</div>

	{% include 'components/testimonial.twig' %}

</section>