<section id="contact-us" class="location__section location__section--contact-us">

	<h2 class="section__header">Contact Us</h2>

	<div class="section__overview">

		<h3 class="">Let&rsquo;s Talk <span class="is-blue">IAPT - {{ location.title }}</span></h3>

		<p class="">For those registered with a {{ location.title }} GP only.</p>

	</div>

	<div class="h-card">

		<div class="h-card__geo p-geo">

			{# Map #}

			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d158857.7281066297!2d-0.24168148405229384!3d51.52877184088774!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon%2C%20UK!5e0!3m2!1sen!2sus!4v1611089875616!5m2!1sen!2sus" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0" class="h-card__iframe"></iframe>

		</div>

		<div class="h-card__meta">

			{# Address #}

			<h4 class="p-name">
			
				<span class="is-purple">Let&rsquo;s Talk</span> IAPT - {{ location.title }}
				
			</h4>

			{% set address = location.meta('location_contact_address') %}

			<div class="p-adr">

				<div class="p-street-address">{{ address.address_street }}</div>

				<div class="p-extended-address">{{ address.address_district }}</div>

				<div class="p-locality">{{ address.address_city }}</div>

				<div class="p-region">{{ address.address_county }}</div>

				<div class="p-postal-code">{{ address.address_postcode }}</div>

			</div>

			{# Hours #}

			<div class="h-card__hours">

				<h4 class="h-card__subheader">Office Opening Hours</h4>

				<div class="h-card__content">

					<p>Monday - Friday: 08:00 - 17:00</p>

					<p>Closed: Public bank holidays</p>

				</div>

			</div>

			{# Phone #}

			<div class="p-tel">{{ location.location_contact_phone }}</div>

			{# Email #}

			<div class="u-email">

				<a href="mailto:" class="u-email__link">{{ location.location_contact_email }}</a>

			</div>

		</div>

	</div>

	<div class="contact__note">

		{# Note #}

		<h4 class="contact__note-header">Please note: Let&rsquo;s Talk IAPT is not an emergency service.</h4>

		<div class="buttons">

			<ul class="button__list">

				<li class="button__item button">
				
					<a href="/make-a-referral/" class="button__link button__link--no-background">To make a referral click here</a>

				</li>

				<li class="button__item button">

					<a href="/urgent-help/" class="button__link button__link--no-background button__link--is-green">Need urgent help click here</a>

				</li>

			</ul>

		</div>

		<p class="contact__note-details">If you are hearing voices, or at risk of harming yourself or others, please call your GP or the 24 hour Crisis Resolution and Home Treatment.</p>

	</div>

	<div class="contact__other-locations">

		{# Other Locations #}

		<p class="">To contact Let&rsquo;s Talk IAPT in Enfield or Haringey please click the links below</p>

		<div class="buttons">

			<ul class="button__list">

				<li class="button__item button">

					<a href="#" class="button__link">Let&rsquo;s Talk IAPT - Enfield</a>

				</li>

				<li class="button__item button">

					<a href="#" class="button__link">Let&rsquo;s Talk IAPT - Haringey</a>

				</li>

			</ul>

		</div>

	</div>

</section>