<section id="welcome" class="location__section location__section--is-visible">

	{#

		{% include 'partials/hero.twig' %}

	#}

	<div class="hero hero__welcome hero--{{ location.slug }}">

		<img src="https://letstalk.coleman.work/wp-content/uploads/BarnetHome.jpg" srcset="" sizes="" width="" height="" decoding="async" alt="A very nice description" class="hero__img hero__img--barnet" />

		<img src="https://letstalk.coleman.work/wp-content/uploads/EnfieldHome.jpg" srcset="" sizes="" width="" height="" decoding="async" alt="A very nice description" class="hero__img hero__img--enfield" />

