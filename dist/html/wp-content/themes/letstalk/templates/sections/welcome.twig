<section id="welcome" class="location__section location__section--is-visible location__section--welcome">

	<div class="hero">

		{% set location_welcome_hero = Image(location.location_welcome_hero) %}

		<img src="{{ location_welcome_hero.src }}" srcset="" sizes="" width="" height="" decoding="async" alt="{{ location_welcome_hero.alt }}" class="hero__img" />

		<div class="hero__overlay">

			<div class="hero__inner-overlay">

				<div class="hero__text">{{ location.title }}</div>

			</div>

		</div>

	</div>

	<h1 class="section__header" style="display: none;">{{ location.title }}</h1>

	<div class="overview section__overview">

		{{ location.location_welcome_overview | wpautop }}

	</div>

</section>