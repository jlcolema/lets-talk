<section id="welcome" class="location__section location__section--is-visible">

	<div class="hero">

		{% set location_welcome_hero = Image(location.location_welcome_hero) %}

		<img src="{{ location_welcome_hero.src }}" srcset="" sizes="" width="" height="" decoding="async" alt="{{ location_welcome_hero.alt }}" class="hero__img" />

	</div>

	<h1 class="section__header" style="display: none;">{{ location.title }}</h1>

	<div class="section__overview">

		{{ location.location_welcome_overview }}

	</div>

</section>