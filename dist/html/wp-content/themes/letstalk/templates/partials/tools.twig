<nav role="navigation" class="tools">

	<ol class="tools__list">

		{% for item in tools_menu.items %}

			<li class="tools__item tools__item--{{ item.slug }} {% if item.current %}tools__item--is-current{% endif %}">

				<a href="{{ item.link }}" class="tools__link">{{ item.title }}</a>

			</li>

		{% endfor %}

	</ol>

</nav>