{% if options.alert_show %}

	<div class="alert">

		<div class="alert__wrap">

			<div class="alert__toggle">

				<span class="alert__label">{{ options.alert_title }}</span>

				{% include 'partials/open-close-toggle.twig' %}

			</div>

			<div class="alert__details">

				{{ options.alert_description }}

			</div>

		</div>

	</div>

{% endif %}