{% extends "base.twig" %}

{% block content %}

	<div class="hero">

		{% set problems_unable_hero = Image(post.problems_unable_hero) %}

		<img src="{{ problems_unable_hero.src }}" srcset="" sizes="" width="" height="" decoding="async" alt="{{ problems_unable_hero.alt }}" class="hero__img" />

	</div>

	<h1 class="page__header">Problems We Are Unable to Help With</h1>

	<div class="overview section__overview">

		{{ post.meta('problems_unable_overview') }}

	</div>

	<div class="accordion__list">

		{% for problem in post.meta('problems_unable_list') %}

		<details class="accordion__item">

			<summary class="accordion__summary">{{ problem.problem_unable_name }}</summary>

			<div class="accordion__details">

				{# Description #}

				<div class="">

					{{ problem.problem_unable_description | wpautop }}

				</div>

				{# Support Groups #}

				<div class="">

					<h3 class="subheader">Support Groups</h3>

					<div class="resources">

						<ul class="resources__list">

							{% for support_group in problem.support_groups %}

								<li class="resources__item">

									<h4 class="resources__name">{{ support_group.support_group_name }}</h4>

									<div class="resources__url">

										<a href="" class="resources__link">{{ support_group.support_group_url }}</a>

									</div>

									<div class="resources__description">

										{{ support_group.support_group_description | wpautop }}

									</div>

								</li>

							{% endfor %}

						</ul>

					</div>

				</div>

				{# Online Resources #}

				<div class="">

					<h3 class="subheader">Online Resources</h3>

					<div class="resources">

						<ul class="resources__list">

							{% for online_resource in problem.online_resources %}

								<li class="resources__item">

									<h4 class="resources__name">{{ online_resource.online_resource_name }}</h4>

									<div class="resources__url">

										<a href="" class="resources__link">{{ online_resource.online_resource_url }}</a>

									</div>

									<div class="resources__description">

										{{ online_resource.online_resource_description | wpautop }}

									</div>

								</li>

							{% endfor %}

						</ul>

					</div>

				</div>

			</div>

		</details>

		{% endfor %}

	</div>

{% endblock %}