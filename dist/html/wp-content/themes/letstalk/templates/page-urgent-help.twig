{% extends "base.twig" %}

{% block content %}
	
	<div class="help">

		<div class="help__topic help__topic--urgent">

			<h1 class="help__header">{{ post.title }}</h1>

			<div class="help__overview">

				{{ post.meta('urgent_help_overview') }}

			</div>

		</div>

		<div class="help__topic help__topic--other">

			<h2 class="help__header">Other Helplines</h2>

			<div class="help__options">

				<ul class="help__list">

					{% for item in post.meta('helplines' ) %}

						<li class="help__item">

							<h3 class="help__name">{{ item.helpline_name }}</h3>

							<div class="help__phone">{{ item.helpline_number }}</div>

							<div class="help__availability">Available: {{ item.helpline_available }}</div>

							<div class="help__description">

								{{ item.helpline_description }}

							</div>

						</li>

					{% endfor %}

				</ul>

			</div>

		</div>

	</div>

{% endblock %}